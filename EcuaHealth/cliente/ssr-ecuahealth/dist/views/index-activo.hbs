<section class="dashboard">
  <div class="dash-content">
    <div class="overview" style="margin-left: 10px;">
      <div class="title">
        <i class="uil uil-desktop"></i>
        <span class="text">Lista de activos</span>
      </div>
      <div class="mb-3">
        <span>
          <h5 style="font-weight: 400 !important;">Lista de activos distribuidos en Ecuahealth</h5>
        </span>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <a type="submit" id="btnNuevo" class="btn btn-primary" href="/activo/nuevo">Nuevo</a>
        </div>
      </div>
    </div>
    <div class="container mt-4">
      <div class="row">
        <div class="table-responsive">
          <table id="tablaDepartamento" class="table table-striped table-bordered table-condensed" style="width: 100%;">
            <thead class="text-center">
              <tr>
                <th>Nombre del activo</th>
              </tr>
            </thead>
            {{#each activos}}
            <tbody class="text-center" *ngFor="let item of controles; let idx = index">
              <tr>
                <td>{{this.activoT}}</td>
                <td>
                  <div class="text-center">
                    <div class="btn-group">
                      <a class="btn btn-success btnEditar" style="margin-right: 5px;" href="/activo/update/{{this._id}}"><i
                          class="fa fa-pen"></i></a>
                    </div>
                    <div class="btn-group">
                      <a class="btn btn-danger btnEditar" href="/activo/delete/{{this._id}}"><i
                          class="uil uil-trash"></i></a>
                    </div>
                  </div>
                </td>
              </tr>
            </tbody>
            {{/each}}
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
